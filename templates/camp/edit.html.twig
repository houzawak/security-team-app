{% extends 'base.html.twig' %}

{% block title %}Camp / Poste | Modification{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/camp_new.js') }}"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xl-10 col-lg-10">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">{{ "Modifier un camp ou poste" }}</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                {{ include('camp/_form.html.twig', {'button_label': 'Modifier'}) }}
                <div class="mt-3">
                    <a href="{{ path('camp_index') }}">Afficher la liste</a>
                    {{ include('camp/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
